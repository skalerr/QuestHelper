    {
        Palette = new Palette()
        {
            AppbarBackground = new MudColor(Colors.Blue.Darken4),
            // AppbarText = "#F0F0F0",
            // Primary = "#F0F0F0",
            // TextPrimary = "#F0F0F0",
            // Background = "#f0f0f0"
        }
    };
    private bool _isDarkMode;
}

